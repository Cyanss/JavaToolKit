<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cyan.toolkit.token.mapper.RouteMapper">
    <resultMap type="cyan.toolkit.zuul.entity.RouteEntity" id="routeResultMap">
        <id property="path" column="path"/>
        <result property="location" column="location"/>
        <result property="name" column="name"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="all_column">
        "path", location, "name", "status", create_time, update_time
    </sql>

    <insert id="save">
        INSERT INTO zuul_route_list (
        <include refid="all_column"/>
        )
        VALUES (
        #{entity.path},
        #{entity.location},
        #{entity.name},
        1,
        now(),
        now()
        ) ON CONFLICT ("path") DO UPDATE
        <set>
            location = CASE WHEN EXCLUDED.location IS NOT NULL THEN EXCLUDED.location ELSE zuul_route_list.location END,
            "name" = CASE WHEN EXCLUDED."name" IS NOT NULL THEN EXCLUDED."name" ELSE zuul_route_list."name" END,
            update_time = CASE WHEN EXCLUDED.update_time IS NOT NULL THEN EXCLUDED.update_time ELSE now() END
        </set>
    </insert>

    <update id="saveAll">
        INSERT INTO zuul_route_list (
        <include refid="all_column"/>
        )
        VALUES
        <foreach item="entity" index="index" collection="entityList" separator=",">
            (
            #{entity.path},
            #{entity.location},
            #{entity.name},
            1,
            now(),
            now()
            )
        </foreach>
        ON CONFLICT ("path") DO UPDATE
        <set>
            location = CASE WHEN EXCLUDED.location IS NOT NULL THEN EXCLUDED.location ELSE zuul_route_list.location END,
            "name" = CASE WHEN EXCLUDED."name" IS NOT NULL THEN EXCLUDED."name" ELSE zuul_route_list."name" END,
            update_time = CASE WHEN EXCLUDED.update_time IS NOT NULL THEN EXCLUDED.update_time ELSE now() END
        </set>
    </update>

    <delete id="deleteById">
        DELETE
        FROM zuul_route_list
        WHERE "path" = #{path}
    </delete>

    <delete id="deleteAll">
        DELETE FROM zuul_route_list
        WHERE "path" IN
        <foreach item="path" index="index" collection="pathList" open="(" separator="," close=")">
            #{path}
        </foreach>
    </delete>

    <select id="findById" resultMap="routeResultMap">
        SELECT
        <include refid="all_column"/>
        FROM zuul_route_list
        WHERE "path" = #{path}
    </select>

    <select id="findAll" resultMap="routeResultMap">
        SELECT
        <include refid="all_column"/>
        FROM zuul_route_list
        WHERE "path" IN
        <foreach item="path" index="index" collection="pathList" open="(" separator="," close=")">
            #{path}
        </foreach>
        ORDER BY update_time ASC
    </select>

    <select id="findAllByWhere" resultMap="routeResultMap">
        SELECT
        <include refid="all_column"/>
        FROM zuul_route_list
        WHERE 1=1
        <if test="whereSql!=null">
            ${whereSql}
        </if>
        ORDER BY update_time ASC
    </select>

    <delete id="deleteAllByWhere">
        DELETE FROM zuul_route_list
        WHERE 1=1
        <if test="whereSql!=null">
            ${whereSql}
        </if>
    </delete>

    <select id="findAllByStatus" resultMap="routeResultMap">
        SELECT
        <include refid="all_column"/>
        FROM zuul_route_list
        WHERE status = #{status}
    </select>

    <select id="findAllByNotStatus" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM zuul_route_list
        WHERE status <![CDATA[<>]]> 0
    </select>

    <update id="alertAllByStatus">
        UPDATE zuul_route_list
        SET status = 0
        WHERE status = 1
    </update>

    <delete id="deleteAllByStatus">
        DELETE FROM zuul_route_list
        WHERE status = 2
    </delete>

</mapper>